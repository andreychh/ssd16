  \sdPrintAndFlush[#1]{
    \sdMiddle{
      \tikz{
        \node [inner sep=18pt] (z) {
          \begin{varwidth}{0.8\textwidth}
            \Large
            #2
          \end{varwidth}
        };
        \path [draw=sd-green,line width=8pt] (z.north west) -- (z.south west);
      }
    }
  }
  \sdMenuShow
}

